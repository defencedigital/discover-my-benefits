{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "esnext",
    "jsx": "react",
    "lib": ["dom", "es2015", "es2017"],
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@components": ["src/components"],
      "@utils/*" : ["src/utils/*"],
      "@utils" : ["src/utils"],
      "@constants/*": ["src/constants/*"],
      "@graphql": ["src/graphql/fragments"],
      "@layout/*": ["src/layout/*"],
      "@pages/*": ["src/pages/*"],
      "@reducers/*": ["src/reducers/*"],
      "@root/*": ["src/*"],
    },
  },
  "files": [
    "custom.d.ts"
  ],
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "public", ".cache"]
}